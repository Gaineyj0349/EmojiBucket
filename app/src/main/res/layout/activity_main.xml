<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#ffffff"
        android:padding="4dp">

<include layout="@layout/quick_copy_block"
         android:layout_alignParentTop="true"
         android:id="@+id/et_block"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_below="@id/et_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/view_for_recents">

    </LinearLayout>
    <View  android:layout_below="@id/view_for_recents"
            android:id="@+id/view1" android:layout_width="match_parent" android:layout_height="8dp"
          android:background="@color/colorPrimaryLight"/>

 <android.support.v7.widget.RecyclerView
         android:layout_below="@id/view1"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:id="@+id/mainRV"
    >

 </android.support.v7.widget.RecyclerView>




</RelativeLayout>